<% if flash.any? %>
  <div class="fixed top-4 right-4 z-50 space-y-4" data-controller="toggle" data-toggle-target="content" data-toggle-hidden-class="hidden">
    <% flash.each do |type, message| %>
      <% bg_color = case type.to_sym
                    when :notice then 'bg-blue-100 text-blue-800 border-blue-300'
                    when :alert then 'bg-red-100 text-red-800 border-red-300'
                    when :success then 'bg-green-100 text-green-800 border-green-300'
                    else 'bg-gray-100 text-gray-800 border-gray-300'
                    end %>

      <div class="flex border-l-4 p-4 rounded-md shadow-md <%= bg_color %>">
        <p class="text-sm mr-4"><%= message %></p>
        <button class="hover:underline" data-action="click->toggle#toggle">x</button>
      </div>
    <% end %>
  </div>
<% end %>
