<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-6">
  <h2 class="text-2xl font-bold text-center mb-6"><%= t('payments.choose.title') %></h2>

  <div class="mb-4">
    <h3 class="text-xl font-semibold"><%= t('payments.choose.details') %></h3>
    <p><strong><%= t('payments.choose.gear') %>:</strong> <%= @service.gear.name %></p>
    <p><strong><%= t('payments.choose.created_at') %>:</strong> <%= @service.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <div class="mt-6 text-center">
    <p class="mb-4"><%= t('payments.choose.prompt') %></p>

    <%= button_to t('payments.choose.basic_button'), service_payments_path(@service, product_id: @product_basic.id), method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded', data: { turbo: false } %>
    <%= button_to t('payments.choose.premium_button'), service_payments_path(@service, product_id: @product_premium.id), method: :post, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded', data: { turbo: false } %>
  </div>
</div>
