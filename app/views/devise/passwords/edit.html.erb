<div class="min-h-screen flex flex-col justify-center items-center">
  <h2 class="text-2xl font-bold text-center mb-6"><%= t('passwords.edit.title') %></h2>

  <div class="w-full max-w-md p-8">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, t('passwords.edit.new_password'), class: 'block text-gray-700 font-medium' %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600">(<%= @minimum_password_length %> <%= t('passwords.edit.minimum_characters') %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, t('passwords.edit.confirm_new_password'), class: 'block text-gray-700 font-medium' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <div class="text-center">
        <%= f.submit t('passwords.edit.change_password_button'), class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
