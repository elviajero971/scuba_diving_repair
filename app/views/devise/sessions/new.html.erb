<div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-2xl font-bold text-center mb-4">Log in</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 font-medium' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 font-medium' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, class: 'text-gray-700 font-medium' %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
