<div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-2xl font-bold text-center mb-6"><%= t('registrations.edit.title', resource_name: resource_name.to_s.humanize) %></h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-md mx-auto" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, t('registrations.edit.email_label'), class: 'block text-gray-700 font-medium' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-sm text-yellow-600">
          <%= t('registrations.edit.confirmation_pending', email: resource.unconfirmed_email) %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, t('registrations.edit.password_label'), class: 'block text-gray-700 font-medium' %>
        <i class="text-sm text-gray-600"><%= t('registrations.edit.password_hint') %></i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500 block mt-1"><%= t('registrations.edit.password_minimum', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, t('registrations.edit.password_confirmation_label'), class: 'block text-gray-700 font-medium' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, t('registrations.edit.current_password_label'), class: 'block text-gray-700 font-medium' %>
        <i class="text-sm text-gray-600"><%= t('registrations.edit.current_password_hint') %></i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-1 border rounded-lg" %>
      </div>

      <div class="text-center">
        <%= f.submit t('registrations.edit.update_button'), class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-6">
    <%= link_to t('registrations.edit.back_link'), :back, class: "text-blue-500 hover:underline" %>
  </div>
</div>
