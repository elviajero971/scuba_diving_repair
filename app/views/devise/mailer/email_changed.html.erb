<p><%= t('devise.mailer.email_changed.hello', email: @resource.email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('devise.mailer.email_changed.email_being_changed', unconfirmed_email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('devise.mailer.email_changed.email_changed', email: @resource.email) %></p>
<% end %>
